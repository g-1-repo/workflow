{
  "name": "@go-corp/workflow",
  "version": "2.0.1",
  "description": "Enterprise-ready release automation and workflow orchestration",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "bin": {
    "go-workflow": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli.esm.js",
      "require": "./dist/cli.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build && bun run typecheck",
    "release": "node dist/cli.js release",
    "dev:cli": "tsup --watch && node dist/cli.js"
  },
  "dependencies": {
    "listr2": "^8.0.0",
    "commander": "^11.1.0",
    "cosmiconfig": "^8.3.6",
    "zod": "^3.22.4",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "enquirer": "^2.4.1",
    "semver": "^7.5.4",
    "execa": "^8.0.1",
    "simple-git": "^3.20.0",
    "conventional-commits-parser": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/semver": "^7.5.4",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.51.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "workflow",
    "release",
    "automation",
    "ci-cd",
    "git",
    "npm",
    "github",
    "enterprise",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/golive-dev/workflow.git"
  },
  "bugs": {
    "url": "https://github.com/golive-dev/workflow/issues"
  },
  "homepage": "https://github.com/golive-dev/workflow#readme",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}